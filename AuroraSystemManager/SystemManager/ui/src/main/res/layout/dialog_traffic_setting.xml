<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="26sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/textcolor_main_wyh_traf"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/type_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <com.example.systemmanageruidemo.contrarywind.view.WheelView
            android:id="@+id/wv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_flow_edit"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:visibility="gone">

            <com.example.systemmanageruidemo.view.CustomEditText
                android:id="@+id/et_flow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="24dp"
                android:background="@null"
                android:inputType="numberDecimal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/et_flow"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/colorPrimary_wyh_traf" />

            <TextView
                android:id="@+id/tv_unit_mb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_flow"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_tv_gray"
                android:gravity="center"
                android:text="MB"
                android:textColor="@color/item_gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_unit_gb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_flow"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/tv_unit_mb"
                android:background="@drawable/bg_tv_blue"
                android:gravity="center"
                android:text="GB"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_flow_run_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_flow_alert"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tv_flow_alert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="left"
                    android:textSize="16sp"
                    android:text="@string/tra_alert_reminder"
                    android:textColor="@color/textcolor_main_wyh_traf"/>

                <CheckBox
                    android:id="@+id/cb_alert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:background="@null"
                    android:button="@null"
                    android:clickable="false"
                    android:drawableLeft="@drawable/checkboxselected2"
                    android:padding="1dp">
                </CheckBox>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_flow_close"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/tv_flow_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="left"
                    android:textSize="16sp"
                    android:text="@string/tra_close_reminder"
                    android:textColor="@color/textcolor_main_wyh_traf"/>

                <CheckBox
                    android:id="@+id/cb_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:background="@null"
                    android:button="@null"
                    android:clickable="false"
                    android:drawableLeft="@drawable/checkboxselected2"
                    android:padding="1dp">
                </CheckBox>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_btn_view"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_below="@id/type_view"
        android:layout_marginTop="20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@color/tra_dialog_gray_white" />

        <TextView
            android:id="@+id/tv_negtive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical|left"
            android:textColor="@color/textcolor_main_wyh_traf"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_positive"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:textColor="@color/textcolor_main_wyh_traf"
            android:textSize="18sp" />

    </RelativeLayout>


</RelativeLayout>