<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/primary_action_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/powermode_list_height"
    android:background="?attr/listChoiceBackgroundIndicator"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:id="@+id/radio_button_layout"
        android:layout_width="@dimen/powermode_radiobutton_wrapper_width"
        android:layout_height="match_parent"
        android:gravity="center" >

        <cyee.widget.CyeeRadioButton
            android:id="@+id/powersaver_mode_radio_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/powermode_list_RadioButton_marginLeft"
            android:layout_marginEnd="@dimen/powermode_list_RadioButton_marginRight"
            android:background="@null"
            android:clickable="false" />

        <ImageView
            android:id="@+id/powersaver_mode_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/powermode_list_RadioButton_marginLeft"
            android:layout_marginEnd="@dimen/powermode_list_RadioButton_marginRight"
            android:background="@null"
            android:clickable="false" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/power_mode_layout"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical" >

        <cyee.widget.CyeeTextView
            android:id="@+id/powersaver_mode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:textSize="18dp"/>

        <cyee.widget.CyeeTextView
            android:id="@+id/powersaver_mode_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/powersaver_mode_title"
            android:focusable="false"
            android:singleLine="false"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12dp" />

        <cyee.widget.CyeeTextView
            android:id="@+id/powersaver_mode_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/powersaver_mode_summary"
            android:focusable="false"
            android:singleLine="false"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/secondary_action_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/click_effect"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/secondary_action_icon_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/savepower_summary_icon_indi" />
    </RelativeLayout>

</LinearLayout>