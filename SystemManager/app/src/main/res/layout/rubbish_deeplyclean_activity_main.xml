<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Gionee <yangxinruo> <2016-5-10> modify for CR01658695 begin -->
    <LinearLayout
        android:id="@+id/deeply_sticky_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/common_green_bg"
        android:gravity="center"
        android:orientation="vertical" >
    <!-- Gionee <yangxinruo> <2016-5-10> modify for CR01658695 end -->

        <RelativeLayout
            android:id="@+id/deepclean_total_size_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/deeply_end_flag_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/delete_end_image"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/deeply_clean_end_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/deeply_end_flag_image"
                android:paddingTop="@dimen/text_padding_top"
                android:paddingBottom="@dimen/text_padding_bottom"
                android:layout_centerHorizontal="true"
                android:text="@string/deeply_clean_end"
                android:textColor="@color/textview_color_white"
                android:textSize="@dimen/clean_end_textSize"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/deeply_clean_end_size_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/deeply_clean_end_text"
                android:layout_centerHorizontal="true"
                android:textColor="@color/textview_color_white"
                android:textSize="@dimen/clean_end_textSize"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/rubbish_text_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <cyee.widget.CyeeTextView
                    android:id="@+id/deepclean_total_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/deeplyclean_rubbish_textsize"
                    android:textStyle="bold"/>

				<!--<LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@id/deepclean_total_size"
                    android:layout_alignTop="@id/deepclean_total_size"
                    android:layout_toStartOf="@id/deepclean_total_size"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="4" />

                    <cyee.widget.CyeeTextView
                        android:id="@+id/deepclean_total"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="top"
                        android:text="@string/total_rubbish_desc"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/total_rubbish_unit_textsize" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                </LinearLayout>-->
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@id/deepclean_total_size"
                    android:layout_alignTop="@id/deepclean_total_size"
                    android:layout_toEndOf="@id/deepclean_total_size"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="4" />

                    <cyee.widget.CyeeTextView
                        android:id="@+id/deepclean_total_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="top"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/deeplyclean_rubbish_unit_textsize"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <cyee.widget.CyeeTextView
                    android:id="@+id/deepcleaned_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deepclean_total_size"
                    android:layout_centerHorizontal="true"
                    android:text="@string/deleted_rubbish_size"
                    android:textColor="@color/textview_color_white"
                    android:textSize="@dimen/advise_textsize"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:visibility="gone" >

            <cyee.widget.CyeeTextView
                android:id="@+id/deepclean_total_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/deepclean_total_desc"
                android:textColor="#ffffff"
                android:textSize="@dimen/deeplyclean_state_textsize" />
        </RelativeLayout>

        <cyee.widget.CyeeTextView
            android:id="@+id/deepclean_selected_size"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:textColor="#ffffff"
            android:textSize="@dimen/deeplyclean_selectdesc_textsize" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/deeply_sticky_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_below="@id/deeply_sticky_header"
        android:orientation="vertical" >

        <ExpandableListView
            android:id="@+id/deepclean_expandablelist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:cacheColorHint="@null"
            android:childIndicatorStart="0dp"
            android:groupIndicator="@null"
            android:scrollbarAlwaysDrawHorizontalTrack="false" >
        </ExpandableListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">
    </LinearLayout>

</LinearLayout>